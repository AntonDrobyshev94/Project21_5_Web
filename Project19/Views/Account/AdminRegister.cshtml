@model Project19.AuthContactApp.UserRegistration
@{
    ViewData["Title"] = "Регистрация";
    bool isSuccess = false;
    if(ViewBag.IsSuccess !=null)
    {
        isSuccess = (bool)ViewBag.IsSuccess;
    } 
    else
    {
        isSuccess = false;
    }
    string alertClass = isSuccess ? "alert-success" : "alert-danger";
}

<div class="container">
    <div class="row">
        <div class="col-md-6 col-md-offset-3 well">
            <h3 class="text-center">Регистрация</h3>

            <form asp-action="AdminRegister" asp-antiforgery="true" class="form">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="col-xs-12">
                    <div class="form-group">
                        <input asp-for="LoginProp" class="form-control" placeholder="Логин" />
                    </div>
                </div>

                <div class="col-xs-12">
                    <div class="form-group">
                        <input asp-for="Password" class="form-control" placeholder="Пароль" />
                    </div>
                </div>

                <div class="col-xs-12">
                    <div class="form-group">
                        <input asp-for="ConfirmPassword" class="form-control" placeholder="Продублируйте пароль" />
                    </div>
                </div>

                <div class="text-center col-xs-12">
                    <button type="submit" class="btn btn-default">Зарегистрировать</button>
                </div>
            </form>
            @if (TempData["UserCreateMessage"] != null)
            {
                <div class="alert @alertClass">@TempData["UserCreateMessage"]</div>
            }
        </div>
    </div>
</div>
